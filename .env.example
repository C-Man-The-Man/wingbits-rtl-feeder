# --------------------------------------------------------
# Wingbits RTL Feeder - Environment Variables
# --------------------------------------------------------
# Copy this file to .env and update your values
# All variables are optional unless marked REQUIRED
# --------------------------------------------------------

# -------------------------------
# Wingbits feeder configuration
# -------------------------------

# REQUIRED: Unique station / device ID
# Can be:
# - Animal name format: your-animal-name
# - Device serial: 18-character hex
# - UUID format: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
WINGBITS_DEVICE_ID=

# REQUIRED: Feeder location
FEEDER_LAT=         # Latitude in decimal degrees, e.g., 39.159779
FEEDER_LONG=        # Longitude in decimal degrees, e.g., -3.009514
FEEDER_ALT_M=       # Altitude in meters
FEEDER_TZ=          # Timezone, e.g., Europe/Madrid
FEEDER_NAME=        # Friendly name for TAR1090 title, e.g., "crankk_feeder"

# -------------------------------
# RTL-SDR / receiver configuration
# -------------------------------

# REQUIRED: RTL-SDR serial number to deterministically select the correct device
ADSB_SDR_SERIAL=

# Optional: PPM correction for the RTL-SDR (leave blank for default)
ADSB_SDR_PPM=

# Optional: Receiver gain in dB (-10 = autogain)
READSB_GAIN=-10

# Device type for readsb (rtlsdr or airspy)
READSB_DEVICE_TYPE=rtlsdr

# -------------------------------
# TAR1090 configuration (web map)
# -------------------------------

UPDATE_TAR1090=true                      # Automatically update TAR1090 data
TAR1090_DEFAULTCENTERLAT=${FEEDER_LAT}  # Map center latitude
TAR1090_DEFAULTCENTERLON=${FEEDER_LONG} # Map center longitude
TAR1090_MESSAGERATEINTITLE=true          # Show messages per second in page title
TAR1090_PAGETITLE=${FEEDER_NAME}        # Page title (your feeder name)
TAR1090_PLANECOUNTINTITLE=true           # Show aircraft count in page title
TAR1090_ENABLE_AC_DB=true                # Enable aircraft database
TAR1090_FLIGHTAWARELINKS=true            # Link aircraft to FlightAware
TAR1090_SITESHOW=true                     # Show sites on map
TAR1090_RANGE_OUTLINE_COLORED_BY_ALTITUDE=true
TAR1090_RANGE_OUTLINE_WIDTH=2.0
TAR1090_RANGERINGSDISTANCES=50,100,150,200
TAR1090_RANGERINGSCOLORS='#1A237E','#0D47A1','#42A5F5','#64B5F6'

# -------------------------------
# Graphs1090 configuration
# -------------------------------

GRAPHS1090_DARKMODE=true

# -------------------------------
# Airspy (optional)
# -------------------------------

ENABLE_AIRSPY=      # Set to true to enable Airspy support
URL_AIRSPY=         # URL or API endpoint for Airspy device (if enabled)

# -------------------------------
# Notes
# -------------------------------
# 1. All coordinates, altitudes, and serial numbers must be set accurately.
# 2. Gain can be set to -10 for autogain or a specific dB value.
# 3. TAR1090 parameters are optional, but recommended for best visualization.
# 4. Airspy is optional; leave blank if not used.
# 5. After editing, save as ".env" and run "docker compose up -d"

